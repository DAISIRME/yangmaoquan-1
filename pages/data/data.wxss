/* pages/data/data.wxss */
.history-price {
  margin-top: 20rpx;
  width: 100%;
  height: 500rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.reasult {
  width: 90%;
  height: 250rpx;
  margin: 20rpx auto;
  display: flex;
}

.img {
  width: 250rpx;
  height: 250rpx;
}

.msg {
  width: 60%;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: space-between;
  margin-left: 20rpx;
  position: relative;
}

.price {
  color: red;
  font-size: 35rpx;
}

.source {
  color: gray;
  font-size: 25rpx;
}

.name {
  font-size: 30rpx;
}

.to {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  color: white;
  background-color: #f7660f;
  border: 0rpx;
  border-radius: 5%;
  font-weight: 400;
  padding: 5rpx 20rpx;
}

.title {
  margin-top: 50rpx;
  height: 50rpx;
  font-size: 30rpx;
  margin-right: auto;
  padding-left: 4%;
  width: 100%;
}

.icon {
  float: left;
  margin-right: 10rpx;
  height: 30rpx;
  width: 25rpx;
  padding-top: 3rpx;
}

.title-text {
  font-size: 30rpx;
  margin-right: 20rpx;
}

.hint {
  font-size: 25rpx;
  color: #818181;
}

.set-price {
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin: 20rpx auto;
  height: 50rpx;
}

.save {
  color: white;
  background-color: #f7660f;
  border: 0rpx;
  border-radius: 5%;
  font-weight: 400;
  padding: 5rpx 20rpx;
}