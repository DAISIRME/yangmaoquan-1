/**index.wxss**/
.search {
  padding: 5rpx;
  width: 90%;
  height: 40rpx;
  border: 1rpx solid #bfbfbf;
  border-radius: 20rpx;
  margin-top: 20rpx;
}
.search-text {
  color: #bfbfbf;
  font-size: 25rpx;
  margin-left: 10rpx;
}
.search-img {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.swiper {
  width: 92%;
  height: 250rpx;
  margin-top: 20rpx;
}
.slide-image {
  width: 100%;
  height: 100%;
}
.buttons {
  height: 150rpx;
  width: 92%;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.button {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  
}
.button-image {
  width: 100rpx;
  height: 90rpx;
}
.button-text {
  font-size: 24rpx;
  margin-top: 10rpx;
}
.title {
  font-size: 30rpx;
  margin-right: auto;
  padding-left: 4%;
  margin-bottom: 10rpx;
}
.title::first-letter {
  color: blue;
}
.love-items {
  height: 250rpx;
  width: 92%;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  white-space: nowrap;
  
}
.love-item {
  width: 25%;
  background-color: #F2F2F2;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
  display: inline-block;
  margin-top: 20rpx;
}
.love-image {
  width: 150rpx;
  height: 150rpx;
  display: block;
}
.love-title {
  font-size: 27rpx;
  color: #747192;
  display: block;
}
.love-money {
  font-size: 20rpx;
  color: #D8CECC;
  padding-right: 20rpx;
}
.extra-msg {
  color: red;
  font-size: 20rpx;
  
}
.love-msg {
  display: flex;
  justify-content: space-between;
  display: block;
  position: relative;
  top: -15rpx;
}

.news-items {
  width: 92%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-top: 20rpx;
}
.news-item {
  width: 48%;
  height: 500rpx;
  display: flex;
  align-items: left;
  justify-content: space-between;
  flex-direction: column;
}
.news-image {
  width: 100%;
}
.news-title {
  font-size: 30rpx;
  color: #898694;
}
.money1 {
  font-size: 20rpx;
  color: #A79A99;
}
.money2 {
  font-size: 30rpx;
  color: red;
}
.buy-number {
  font-size: 25rpx;
  color: #A79A99;
}
.extra-msg2 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}