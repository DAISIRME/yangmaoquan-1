<!--pages/search/search.wxml-->
<import src="/wxSearch/wxSearch.wxml" />
<view class="wxSearch-section">
	<view class="wxSearch-pancel">
		<input bindinput="wxSearchInput" bindfocus="wxSerchFocus" value="{{wxSearchData.value}}" bindblur="wxSearchBlur" class="wxSearch-input" placeholder="搜索" />
		<button class="wxSearch-button" bindtap="wxSearchFn" size="mini" plain="true">搜索</button>
	</view>
</view>
<template is="wxSearch" data="{{wxSearchData}}" />
<view class="container" >
	<view class="reasult" bindtap="click" wx:for="{{RearchResultList}}" wx:key="id">
		<image class="img" src="{{item.shopImg}}"></image>
		<view class="msg">
			<text class="name">{{item.shopTitle}}</text>
			<text class="price">{{item.shopPrice}}</text>
			<text class="source">{{item.shopType}}</text>
		</view>
	</view>
</view>