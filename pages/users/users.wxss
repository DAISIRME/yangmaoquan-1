/* pages/users/users.wxss */
.background-color {
  background-color: #FF6B1A;
  width: 100%;
  height: 250rpx;
  position: relative;
  z-index: 0;
}

.user-card {
  width: 80%;
  height: 330rpx;
  position: relative;
  top: -250rpx;
  z-index: 1;
  background-color: white;
  border: 1rpx solid #bfbfbf;
  border-radius: 25rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #bfbfbf;
  padding: 10rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
}

.top {
  flex: 4;
  padding-top: 30rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  display: flex;
}

.middle {
  flex: 2;
  margin-top: 20rpx;
}

.bottom {
  flex: 1;
  height: 20rpx;
  padding-top: 20rpx;
}

.img-border {
  padding: 7rpx;
  border: 1rpx solid #FF6B1A;
  height: 130rpx;
  width: 130rpx;
  border-radius: 50%;
  margin-left: 15rpx;
}

.head {
  height: 100%;
  width: 100%;
  border-radius: 50%;
}

.text-border {
  border: 1rpx solid #FF6B1A;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
  width: 100%;
  height: 70rpx;
  line-height: 20rpx;
}

.hello {
  font-size: 18rpx;
  font-weight: bold;
  display: block;
}

.msg {
  font-size: 18rpx;
}

.tag {
  background-color: #bfbfbf;
  border-radius: 20rpx;
  float: left;
  margin-right: 40rpx;
  font-size: 18rpx;
}

.box {
  font-size: 20rpx;
  margin-left: 15rpx;
  width: 65%;
}

.first-line {
  display: flex;
  justify-content: space-between;
}

.name {
  font-size: 35rpx;

}

.sign {
  color: green;
}

.change {
  float: right;
  border-radius: 20rpx;
  background-color: #bfbfbf;
}

.clean {
  clear: both;
}

.introduce {
  margin-top: 5rpx;
  font-size: 25rpx;
}

.search {
  padding: 5rpx;
  width: 90%;
  height: 40rpx;
  border: 1rpx solid #bfbfbf;
  border-radius: 20rpx;
  margin-top: 20rpx;
}
.search-text {
  color: #bfbfbf;
  font-size: 25rpx;
  margin-left: 10rpx;
}
.search-img {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}